pipeline {
  agent any
  triggers {
    GenericTrigger(
     genericVariables: [
      [key: 'ref', value: '$.ref']
     ],

     causeString: 'Triggered on $ref',

     token: 'NEW_PIPE',
     tokenCredentialId: '',

     printContributedVariables: true,
     printPostContent: true,

     silentResponse: false,

     regexpFilterText: 'refs/heads/develop',
     regexpFilterExpression: 'refs/heads/' + BRANCH_NAME
    )
  }
  stages {
    stage('Validation') {
      steps {
        sh "echo Validation"
      	   }
    }

    stage('Build') {
      steps {
	 dir('src')
        	{       
		sh 'docker build -t  basket.api .'
        	}

      }
    }
    stage('Deploy') {
      steps {

	 dir('src')
	        {   
		sh 'docker container stop basket.api'
                sh 'docker container rm basket.api'
                sh 'docker run -d --env-file env.basket.api  -p "8001:80"  --name basket.api  basket.api'
		echo 'Deploy started Working fine'   
        	}

      	}
    		}
  	}
}
